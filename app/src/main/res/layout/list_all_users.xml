<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_activity_show_users"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:drawablePadding="5dp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/vector_search_24"
        android:iconifiedByDefault="false"
        android:hint="Search by username"
        android:queryHint="Search objectUsers" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_nameSort"
            android:layout_width="143dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:backgroundTint="@color/realLavender"
            android:text="age"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_usernameSort"
            android:layout_width="143dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:backgroundTint="@color/realLavender"
            android:text="username"
            android:layout_weight="1"
            android:textSize="20sp"/>
            />
    </LinearLayout>


    <ListView
        android:id="@+id/listViewUsers"
        android:layout_width="match_parent"
        android:layout_height="516dp"
        android:divider="@null"
        android:dividerHeight="5dp" />

</LinearLayout>