<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:background="@drawable/background_saving_location_activity"
    android:orientation="vertical">



    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Save Location via latitude and longitude"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>




    <EditText
        android:id="@+id/etLatitudeForSaving"
        android:layout_width="240dp"
        android:layout_height="49dp"
        android:background="@drawable/border_orange"
        android:gravity="center"
        android:hint="latitude"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etLongitudeForSaving"
        android:layout_width="240dp"
        android:layout_height="49dp"
        android:background="@drawable/border_orange"
        android:gravity="center"
        android:hint="longitude"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnCreateSavedLocationViaCoordinates"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/btn_background_saving_locations"
        android:gravity="center"
        android:padding="12dp"
        android:text="Create"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        app:backgroundTint="@null"/>


</LinearLayout>