<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:background="@drawable/background_activity_login_register"
    android:orientation="vertical">

    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Create New Password"
        android:textSize="27dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/etRecoveryPhoneNumber"
        android:layout_width="290dp"
        android:layout_height="49dp"
        android:background="@drawable/border_orange"
        android:gravity="center"
        android:hint="Phone Number"
        android:textSize="23dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnSendSmsWithCode"
        android:singleLine="true"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/btn_background_saving_locations"
        android:gravity="center"
        android:padding="12dp"
        android:text="Send Sms"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        app:backgroundTint="@null"/>


    <Button
        android:id="@+id/btnRecoverPasswordWithCode"
        android:singleLine="true"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/btn_background_saving_locations"
        android:gravity="center"
        android:padding="12dp"
        android:text="Recover Password"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:backgroundTint="@null"/>

    <EditText
        android:id="@+id/etRecoveryCodeFromSms"
        android:layout_width="290dp"
        android:layout_height="49dp"
        android:background="@drawable/border_orange"
        android:gravity="center"
        android:hint="Recovery code"
        android:textSize="23dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>


</LinearLayout>